import java.util.Scanner;

public class Main {
    public static void main(String[] args) {

        Scanner inp= new Scanner(System.in);
        System.out.print("Matris boyutunu giriniz (Satır) : ");
        int row = inp.nextInt();
        System.out.print("Matris boyutunu giriniz (Sütun) : ");
        int col = inp.nextInt();

        MineSweeper game = new MineSweeper(row,col);

        game.run();

    }
}
